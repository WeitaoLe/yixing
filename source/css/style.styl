@import "nib"
@import "_variables"
@import "_util/mixin"
@import "_util/grid"

global-reset()

input, button
  margin: 0
  padding: 0
  &::-moz-focus-inner
    border: 0
    padding: 0

@font-face
  font-family: FontAwesome
  font-style: normal
  font-weight: normal
  src: url(font-icon-path + ".eot?v=#" + font-icon-version)
  src: url(font-icon-path + ".eot?#iefix&v=#" + font-icon-version) format("embedded-opentype"),
       url(font-icon-path + ".woff?v=#" + font-icon-version) format("woff"),
       url(font-icon-path + ".ttf?v=#" + font-icon-version) format("truetype"),
       url(font-icon-path + ".svg#fontawesomeregular?v=#" + font-icon-version) format("svg")
* 
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;

html, body, #container
  font-size:10px;
  height: 100%
  font-family:tahoma,Helvetica, Arial,"\5FAE\8F6F\96C5\9ED1"
 
a
  text-decoration:none;cursor: pointer;
  &:link,&:visited, &:active
    text-decoration:none;
  &:hover, &:focus 
    text-decoration:none;outline:none;

.clearfix
  display:block
  clear:both
  height:0
  overflow:hidden
  &:after
    content:"."
    display:block
    height:0
    clear:both
    overflow:hidden
    visibility:hidden

body
  background: url("/img/bg.jpg") no-repeat;
  background-attachment: fixed;
  background-size: cover;
  font: font-size font-sans
  -webkit-text-size-adjust: 100%
.main
  height: auto;
  padding-top: 68px;
  margin: 0 auto;

.outer
  clearfix()
  max-width: (column-width + gutter-width) * columns + gutter-width
  margin: 0 auto
  padding: 0 gutter-width

.inner
  column(columns)

.left, .alignleft
  float: left

.right, .alignright
  float: right

.clear
  clear: both

#container
  position: relative

.mobile-nav-on
  overflow: hidden


/*
设备适配
 */
@media(min-width:769px)
  .main
    width: 910px;

  .header
    position: fixed;
  
  .container
    width: 700px;
    float: right;
    .content
      height: auto;
    
  
  .container-box
    width: 86%;
  
  .footer
    width: 910px;

@media(max-width:768px)
  .main
    width: 100%;
  
  .container
    width: 95%;
    margin:0 auto;

  .container-box
    width: 75%;
  
  .footer
    width: 90%;

if sidebar and sidebar isnt bottom
  #main
    @media mq-normal
      column(main-column)

if sidebar is left
  @media mq-normal
    #main
      float: right

@import "_extend"
@import "_partial/header"
@import "_partial/article"
@import "_partial/comment"
@import "_partial/archive"
@import "_partial/footer"
@import "_partial/highlight"
