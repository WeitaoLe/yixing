  
.container
  height:auto;
  padding-bottom: 20px;
  a
    color:#555
    
  .content
    background-color: #FFF;
    border-radius:10px;
    width: 100%;
    margin-bottom: 70px;
    position: relative;
    color: #555;
    h2
      padding:30px 30px 40px
      line-height:3rem
      font-weight:bold
      a
        font-size:2rem
        text-decoration:none
        &:hover
          color:#444
    p{
      font-size:1.4rem
    }
    
    .summary
      line-height: 26px
      font-size: 1.4rem
      padding: 0px 30px 30px 30px
      box-sizing:border-box
      figure
        margin:20px 0
      h2
        padding:2rem 0
    
    .submenu
      height: 50px
      background-color: #fafafa;
      bottom:0;
      border-top: 1px solid #dddddd;
      border-radius: 0 0 10px 10px;
      line-height: 50px;
      padding: 0 30px 0 30px;
      font-size: 0.9rem;
      a
        color: #555;
      
      .submenu-time
        float: left;
      
      .submenu-hot
        float: right;
        font-style: italic;

      
    
  
  .article
    color: #555;
    background-color: #FFF;
    border-radius: 10px;
    height: auto;
    padding-bottom: 30px;

    h2
      height: 30px;
      line-height: 30px;
      padding:30px 30px 15px;
    
    .submenu
      color: #ddd;
      height: 50px;
      bottom:0;
      border-radius: 0 0 10px 10px;
      line-height: 50px;
      padding: 0 30px 0 30px;
      font-size: 0.9rem;
      a
        color: #ddd;
      
      .submenu-time
        float: left;
      
    
    .summary
      line-height: 26px;
      font-size: 1.4rem;
      height:auto;
      padding: 0px 30px 30px 30px;
      p
        padding-top:15px;
      
    
    
          
        
      
    
  


