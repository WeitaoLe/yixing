@charset "UTF-8";
html {font-size: 62.5%;font-family:tahoma,Helvetica, Arial,"\5FAE\8F6F\96C5\9ED1";}
body,ul,ol,dl,dd,h1,h2,h3,h4,h5,h6,pre,form,fieldset,legend,input,button,textarea,p,blockquote,table,th,td,menu{margin:0;padding:0;box-sizing:content-box;}
table{border-collapse:collapse;border-spacing:0;}
ul,ol,menu{list-style:none}
fieldset,img{border:none}
img,object,select,input,textarea,button{vertical-align:middle}
input,textarea,select,address,caption,cite,code,dfn,em,i,b,strong,small,th,var,abbr{font-size:100%;font-style:normal}
caption,th {text-align: left;}
article,aside,footer,header,hgroup,nav,section,figure,figcaption {display: block;}
code, kbd, pre, samp, tt { font-family: Consolas,"Courier New", Courier, monospace;}
address, cite, dfn, em, var,i {font-style: normal;}
blockquote, q {quotes: none;}
blockquote:before, blockquote:after,q:before, q:after {content:"";content: none;}
input[type=text]:focus,input[type=password]:focus,textarea:focus{
	outline:none;}
a { 
    text-decoration:none;cursor: pointer;
    &:link,&:visited, &:active{text-decoration:none;}
    &:hover, &:focus {text-decoration:none;outline:none;}
}

//搜索font
@font-face {font-family: 'search-icon';
    src: url('../font/search-icon/font.eot'); /* IE9*/
    src: url('../font/search-icon/font.eot?#iefix') format('embedded-opentype'), /* IE6-IE8 */
    url('../font/search-icon/font.woff') format('woff'), /* chrome、firefox */
    url('../font/search-icon/font.ttf') format('truetype'), /* chrome、firefox、opera、Safari, Android, iOS 4.2+*/
    url('../font/search-icon/font.svg#search-icon') format('svg'); /* iOS 4.1- */
}
