.header
  width:170px
  height: 300px
  margin:0 auto
  //position: fixed
    
.myphoto
  text-align: center
  img
    width: 130px
    border-radius: 50%
    box-shadow: 0 0 0 6px #FFF
    transition:transform 0.8s
    -webkit-transition:transform .8s
    -moz-transition:transform .8s
   
.mysitename
  height: 40px
  text-align: center
  color: #FFF
  font-size: 3rem
  padding-top: 15px
  
.navbar
  color: #FFF
  padding: 15px 0 15px
  text-align:center
  a
    color: #fff
    font-size: 1.4rem
    
.searchbox
  width: 100%
  border-radius: 25px
  height: 28px
  border: 1px solid #000
  position: relative
  input
    border: 0px
    background: none
    width: 120px
    height: 28px
    padding: 0px 10px 0 10px
    color: #FFF
    float: right
    &:focus
      border: none
      outline:none
      box-shadow: 0 0 0 0
.search-btn
  border: 0px
  background: none
  width: 30px
  position: absolute
  left: 0
  top:5px
  &:focus
    border: none
    outline:none
    box-shadow: 0 0 0 0
